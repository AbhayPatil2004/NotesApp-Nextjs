{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    /* ‚≠ê Add these two for absolute imports */
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/app/api/increaseLikesCount/[id]/route.js", "src/app/api/uploadData/textUpload/route.js", "src/app/api/uploadData/pdfUpload/route.js", "src/app/api/uploadData/imageUpload/route.js", "src/app/api/signUp/route.js", "src/app/api/login/route.js", "src/app/api/fetchData/fetchTextContent/route.js", "src/app/api/fetchData/fetchPdfs/route.js", "src/app/api/fetchData/fetchImages/route.js"  ],

  "exclude": ["node_modules"]
}
